{% extends 'base.html.twig' %}

{% block title %}Créer un nouveau cours
{% endblock %}

{% block body %}
	<section class="py-12 bg-gray-50">
		<div class="container mx-auto max-w-3xl bg-white p-8 rounded-xl shadow-lg">
			<h1 class="text-3xl font-bold text-gray-900 mb-6 text-center">Créer un nouveau cours</h1>

			{% for message in app.flashes('success') %}
				<div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg mb-6" role="alert">
					{{ message }}
				</div>
			{% endfor %}

			{{ form_start(form, { 'attr': { 'class': 'space-y-6' } }) }}

			<!-- Name -->
			<div>
				<label for="{{ form.name.vars.id }}" class="block text-lg font-medium text-gray-700 mb-2">
					Nom du Cours
				</label>
				{{ form_widget(form.name, { 'attr': { 'class': 'mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-800' } }) }}
				<div class="text-red-600 text-sm mt-2">
					{{ form_errors(form.name) }}
				</div>
			</div>

			<div>
				<label for="{{ form.matiere.vars.id }}" class="block text-lg font-medium text-gray-700 mb-2">
					Matière
				</label>
				{{ form_widget(form.matiere, { 'attr': { 'class': 'mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-800' } }) }}
				<div class="text-red-600 text-sm mt-2">
					{{ form_errors(form.matiere) }}
				</div>
			</div>

			<!-- Submit Button -->
			<form method="post" enctype="multipart/form-data">
				{{ form_start(form) }}
				{{ form_row(form.file) }}
				<div>
					<button type="submit">
					</button>
				</div>
				{{ form_end(form) }}
			</form>

		<!-- Retour à la liste des cours -->
		<div class="mt-6 text-center">
			<a href="{{ path('cours.index') }}" class="text-sm text-gray-600 hover:text-gray-800 transition duration-200 ease-in-out">
				Retour à la liste des cours
			</a>
		</div>

		<!-- Bouton Retour en haut -->
		<div class="text-end mt-6">
			<a href="#" class="text-sm text-gray-600 hover:text-gray-800 transition duration-200 ease-in-out" onclick="window.scrollTo({top: 0, behavior: 'smooth'})">
				<i class="fas fa-arrow-up"></i>
				Retour en haut
			</a>
		</div>
	</div>
</section>{% endblock %}
