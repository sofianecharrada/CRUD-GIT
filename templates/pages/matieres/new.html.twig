{% extends 'base.html.twig' %}

{% block body %}
    <div class="bg-gray-100 min-h-screen py-12 flex items-center justify-center">
        <div class="container mx-auto max-w-4xl bg-white rounded-xl shadow-lg p-10">
            <!-- Header -->
            <h1 class="text-4xl font-bold text-gray-900 mb-6 text-center">
                Création de la Matière
            </h1>

            <!-- Success Messages -->
            {% for message in app.flashes('success') %}
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg mb-6" role="alert">
                    {{ message }}
                </div>
            {% endfor %}

            <!-- Form -->
            {{ form_start(form, { 'attr': { 'class': 'space-y-8' } }) }}

            <!-- Name -->
            <div>
                <label for="{{ form.name.vars.id }}" class="block text-lg font-medium text-gray-700 mb-2">
                    Nom de la Matière
                </label>
                {{ form_widget(form.name, { 'attr': { 'class': 'mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-800' } }) }}
                <div class="text-red-600 text-sm mt-2">
                    {{ form_errors(form.name) }}
                </div>
            </div>

            <!-- Submit -->
            <div class="mt-6">
                {{ form_widget(form.submit, { 'attr': { 'class': 'w-full py-3 px-6 border border-transparent shadow-sm text-lg font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200 ease-in-out' } }) }}
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
